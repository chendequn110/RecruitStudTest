<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/windowBackground"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/size_10dp"
        android:paddingBottom="@dimen/size_10dp"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="职位"
                        android:textColor="@color/alpha_75_black"
                        android:textStyle="bold"
                        android:textSize="@dimen/font_medium" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tvWorkPlace"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="地点"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium" />

                    <TextView
                        android:id="@+id/tvMonthPay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_100dp"
                        android:text="职位月薪"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium" />



                </RelativeLayout>

            </LinearLayout>


            <TextView
                android:id="@+id/tvCompanyName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="公司名称"
                android:textColor="@color/darker_grey"
                android:textSize="@dimen/font_medium" />
            <TextView
                android:id="@+id/tvAwardAmt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="推荐奖金"
                android:textColor="@color/error_color"
                android:textSize="@dimen/font_medium" />
            <TextView
                android:id="@+id/tvCreateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_5dp"
                android:text="2016.10.17  8:00-9:00"
                android:textColor="#999999"
                android:textSize="@dimen/font_medium" />

        </LinearLayout>

