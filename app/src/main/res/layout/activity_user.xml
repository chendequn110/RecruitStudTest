<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<include layout="@layout/custom_toolbar" />-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/fab_margin">


                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="@dimen/size_80dp"
                    android:layout_height="@dimen/size_80dp"
                    android:layout_gravity="center_horizontal"
                    android:src="@mipmap/ic_default_img" />

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_large" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/windowBackground"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvProgressQuery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_user_tain"
                    android:drawablePadding="@dimen/size_10dp"
                    android:padding="@dimen/fab_margin"
                    android:text="@string/my_progress"
                    android:textColor="@color/darker_grey"
                    android:textSize="@dimen/font_medium" />

                <View style="@style/view_line_style" />

                <TextView
                    android:id="@+id/tvWallet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_wallet"
                    android:drawablePadding="@dimen/size_10dp"
                    android:padding="@dimen/fab_margin"
                    android:text="@string/my_wallet"
                    android:textColor="@color/darker_grey"
                    android:textSize="@dimen/font_medium" />

                <View style="@style/view_line_style" />

                <TextView
                    android:id="@+id/tvPreferential"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_preferential"
                    android:drawablePadding="@dimen/size_10dp"
                    android:padding="@dimen/fab_margin"
                    android:text="@string/my_preferential"
                    android:textColor="@color/darker_grey"
                    android:textSize="@dimen/font_medium" />

                <View style="@style/view_line_style" />

                <TextView
                    android:id="@+id/tvNetTeach"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_user_net_teach"
                    android:drawablePadding="@dimen/size_10dp"
                    android:padding="@dimen/fab_margin"
                    android:text="@string/my_network_teach"
                    android:textColor="@color/darker_grey"
                    android:textSize="@dimen/font_medium" />

                <View style="@style/view_line_style"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvEvaluation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@mipmap/ic_user_evaluate"
                        android:drawablePadding="@dimen/size_10dp"
                        android:padding="@dimen/fab_margin"
                        android:text="@string/user_evaluation"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium" />

                    <TextView
                        android:id="@+id/tvCount"
                        android:layout_width="@dimen/size_20dp"
                        android:layout_height="@dimen/size_20dp"
                        android:layout_marginLeft="-50dp"
                        android:background="@drawable/shape_unread_msg_count"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/font_small"
                        android:visibility="invisible" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvFace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@mipmap/ic_feedback"
                    android:drawablePadding="@dimen/size_10dp"
                    android:padding="@dimen/fab_margin"
                    android:text="@string/user_face"
                    android:textColor="@color/darker_grey"
                    android:textSize="@dimen/font_medium"
                    android:visibility="gone" />
            </LinearLayout>

            <TextView
                android:id="@+id/tvFeedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_10dp"
                android:background="@color/windowBackground"
                android:drawableLeft="@mipmap/ic_feedback"
                android:drawablePadding="@dimen/size_10dp"
                android:padding="@dimen/fab_margin"
                android:text="@string/user_feedback"
                android:textColor="@color/darker_grey"
                android:textSize="@dimen/font_medium" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:layout_weight="2.15"
                android:orientation="vertical">

                <Button
                    android:id="@+id/btnExit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/windowBackground"
                    android:minHeight="@dimen/size_50dp"
                    android:text="@string/user_exit_login"
                    android:textColor="@color/green"
                    android:textSize="@dimen/font_medium" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>