    <LinearLayout
        android:id="@+id/lltollbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/headLine"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_8dp"
            android:background="@color/comm_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_40dp"
            android:layout_marginTop="@dimen/size_10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/size_48dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSchool"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30dp"
                    android:gravity="right|center_vertical"
                    android:text="数据1"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_17dp"/>

                <View
                    android:id="@+id/line_school"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="2dp"
                    android:layout_gravity="right"
                    android:layout_marginRight="@dimen/size_10dp"
                    android:background="@color/colorPrimary"/>

            </LinearLayout>

            <View
                android:id="@+id/LineVertical"
                android:layout_width="@dimen/size_1dp"
                android:layout_height="@dimen/size_20dp"
                android:layout_gravity="center"
                android:background="@color/comm_line"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_30dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvCoach"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_30dp"
                    android:gravity="left|center_vertical"
                    android:text="数据2"
                    android:textColor="@color/black"
                    android:textSize="@dimen/size_17dp"/>

                <View
                    android:id="@+id/line_coach"
                    android:layout_width="@dimen/size_30dp"
                    android:layout_height="2dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/size_10dp"
                    android:background="@color/colorPrimary"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


