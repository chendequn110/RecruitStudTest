<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin">


        <LinearLayout
            android:id="@+id/ltBindPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="horizontal">

            <TextView
                style="@style/change_trade_pwd_style"
                android:text="@string/user_bind_phone" />

            <TextView
                android:id="@+id/tvBindPhone"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/size_15dp"
                android:text=""
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/comm_line" />

        <LinearLayout
            android:id="@+id/ltBindMail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="horizontal">

            <TextView
                style="@style/change_trade_pwd_style"
                android:text="@string/user_bind_mail" />

            <TextView
                android:id="@+id/tvBindMail"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/size_15dp"
                android:text=""
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/comm_line" />
        <LinearLayout
            android:id="@+id/ltbindwx"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="horizontal">

            <TextView
                style="@style/change_trade_pwd_style"
                android:text="@string/user_bind_wx" />

            <TextView
                android:id="@+id/tvBindwx"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/size_15dp"
                android:text=""
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/comm_line" />
        <LinearLayout
            android:id="@+id/ltbindqq"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:orientation="horizontal">

            <TextView
                style="@style/change_trade_pwd_style"
                android:text="@string/user_bind_qq" />

            <TextView
                android:id="@+id/tvBindqq"
                android:layout_width="0dp"
                android:layout_height="@dimen/size_40dp"
                android:layout_weight="1"
                android:drawableRight="@mipmap/ic_arrow_right"
                android:gravity="center_vertical|right"
                android:paddingRight="@dimen/size_15dp"
                android:text=""
                android:textSize="@dimen/font_normal" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_1dp"
            android:background="@color/comm_line" />

    </LinearLayout>


</LinearLayout>