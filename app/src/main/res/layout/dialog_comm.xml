<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/size_20dp"
    android:layout_marginRight="@dimen/size_20dp"
    android:background="@drawable/shape_corner_bg_white"
    android:minHeight="@dimen/size_80dp"
    android:minWidth="@dimen/size_150dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/dgTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:layout_marginTop="@dimen/size_10dp"
        android:gravity="center_horizontal"
        android:text="@string/dialog_title_default"
        android:textColor="@color/black"
        android:textSize="@dimen/font_medium" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size_20dp"
        android:layout_marginRight="@dimen/size_20dp"
        android:paddingBottom="@dimen/size_20dp"
        android:paddingTop="@dimen/size_20dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/dgLoadImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/size_10dp"
            android:layout_gravity="center_horizontal"
            android:src="@mipmap/ic_load_spiner"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/dgMsg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:text="@string/dialog_msg_default"
            android:gravity="center_horizontal"
            android:textColor="@color/darker_grey"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

    <View
        android:id="@+id/viewLogLine"
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:alpha="0.6"
        android:background="@color/darker_grey" />

    <LinearLayout
        android:id="@+id/llDialogBut"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/dialog_btn_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/dgCannel"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/select_btn_left_radius"
            android:text="@string/cancel"
            android:textColor="@color/light_green"
            android:textSize="@dimen/font_medium" />

        <View
            android:id="@+id/divider"
            android:layout_width="1px"
            android:layout_height="fill_parent"
            android:alpha="0.6"
            android:background="@color/darker_grey" />

        <Button
            android:id="@+id/dgOk"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="@drawable/select_btn_right_radius"
            android:text="@string/ok"
            android:textColor="@color/light_green"
            android:textSize="@dimen/font_medium" />
    </LinearLayout>

</LinearLayout>