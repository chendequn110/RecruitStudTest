<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/bg_color"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_2dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <!--第一项-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="@dimen/size_10dp">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ImageView
                            android:layout_width="@dimen/size_30dp"
                            android:layout_height="@dimen/size_30dp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:background="@drawable/subject"/>

                        com.tiandu.recruit.stud.view.circleview.CircularFillableLoaders
                        android:id="@+id/ivWaveAppoint"
                        android:layout_width="@dimen/size_30dp"
                        android:layout_height="@dimen/size_30dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/shape_cricle_transparent_bg"
                        app:cfl_wave_color="@color/colorPrimary" />

                        <TextView
                            android:id="@+id/tv_month"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="月份"
                            android:textColor="@color/white"
                            android:textSize="@dimen/font_small"
                            android:textStyle="bold"/>

                    </RelativeLayout>

                </FrameLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvArrangeTime"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/size_5dp"
                        android:gravity="right"
                        android:text="日期"
                        android:textSize="@dimen/font_small"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/size_10dp"
        android:paddingLeft="@dimen/size_16dp"
        android:paddingRight="@dimen/size_16dp"
        android:paddingTop="@dimen/size_10dp"
        android:background="@color/white"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_5dp"
                    android:orientation="horizontal">
                  <!--  <ImageView
                        android:layout_centerVertical="true"
                        android:id="@+id/iv1"
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/ic_fee_money"
                       />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:text="自荐奖金收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <TextView
                        android:id="@+id/tvTotalFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="自荐奖金收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <View
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_below="@+id/tvTotalFee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/comm_line" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">
                  <!--  <ImageView
                        android:id="@+id/iv2"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/ic_fee_money"
                        />-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:text="下级奖金收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <TextView
                        android:id="@+id/tvParentFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="下级奖金收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <View
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_below="@+id/tvParentFee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/comm_line" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">

                   <!-- <ImageView
                        android:id="@+id/iv3"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/ic_fee_money"
                        />-->
                    <TextView
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="账户税前收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <TextView
                        android:id="@+id/tvTakeFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="账户税前收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <View
                        android:layout_marginTop="@dimen/size_10dp"
                        android:layout_below="@+id/tvTakeFee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/comm_line" />

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_10dp"
                    android:orientation="horizontal">
                   <!-- <ImageView
                        android:id="@+id/iv4"
                        android:layout_centerVertical="true"
                        android:layout_width="@dimen/size_15dp"
                        android:layout_height="@dimen/size_15dp"
                        android:src="@mipmap/ic_fee_money"
                        />-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/size_5dp"
                        android:text="账户税后收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                    <TextView
                        android:id="@+id/tvChildFee"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="账户税后收入"
                        android:textColor="@color/darker_grey"
                        android:textSize="@dimen/font_medium"/>
                 <!--   <View
                        android:layout_marginTop="@dimen/size_5dp"
                        android:layout_below="@+id/tvChildFee"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/comm_line" />-->
                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/comm_line" />
</LinearLayout>
