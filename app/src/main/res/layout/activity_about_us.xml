<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/custom_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:background="@color/windowBackground"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/im_qrcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/size_30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_30dp"
                android:layout_marginTop="@dimen/size_20dp"
                android:gravity="center"
                android:text="分享二维码"
                android:textColor="@color/title_text"
                android:textSize="@dimen/font_large" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_15dp"
            android:background="@color/windowBackground"
            android:gravity="center"
            android:padding="@dimen/size_16dp"
            android:text="上海天都人力资源有限公司"
            android:textColor="@color/context_text"
            android:textSize="@dimen/font_normal" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/comm_line"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/windowBackground"
            android:gravity="center"
            android:padding="@dimen/size_14dp"
            android:text="地址：上海市闵行区七莘路1318号强劲大厦11F"
            android:textColor="@color/context_text"
            android:textSize="@dimen/font_mediumer" />

    </LinearLayout>
</LinearLayout>